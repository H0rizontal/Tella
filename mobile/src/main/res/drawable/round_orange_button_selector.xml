<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape  >
            <corners
                android:radius="15dp"
                >
            </corners>

            <solid
                android:color="#D9FFFFFF"
                >
            </solid>
            <stroke
                android:color="@color/wa_white"
                android:width="3dp"
                >
            </stroke>
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape >
            <corners
                android:radius="15dp"
                >
            </corners>

            <solid
                android:color="#D9FFFFFF"
                >
            </solid>
            <stroke
                android:color="@color/wa_white"
                android:width="3dp"
                >
            </stroke>
        </shape>
    </item>

    <item android:state_focused="false" >
        <shape >
            <solid android:color="@color/wa_orange"/>
            <corners
                android:radius="15dp"/>
        </shape>
    </item>

    <item android:state_pressed="false" >
        <shape >
            <solid android:color="@color/wa_orange"/>
            <corners
                android:radius="15dp"/>
        </shape>
    </item>

</selector>