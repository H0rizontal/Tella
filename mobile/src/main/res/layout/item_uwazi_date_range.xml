<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/wa_purple"
    android:layout_marginTop="16dp"
    android:orientation="vertical">

    <ImageButton
        android:id="@+id/clearWidgetButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/ic_cancel_rounded"
        android:contentDescription="@string/action_cancel"
        android:visibility="visible" />

    <TextView
        android:id="@+id/textFrom"
        android:textSize="16sp"
        android:textAlignment="viewStart"
        android:gravity="start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginBottom="2dp"
        android:text="@string/Uwazi_WidgetSubtitle_DateFrom"
        android:textColor="@color/wa_white_80"/>

    <Button
        android:id="@+id/dateWidgetButtonFrom"
        style="@style/CollectFormWidgetButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="@string/collect.form_action_select.date"
        />

    <TextView
        android:id="@+id/dateTextFrom"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_margin="2dp"
        android:background="@drawable/rounded_light_purple_background"
        android:gravity="center"
        android:textAlignment="center"
        android:textColor="@color/wa_white_80"
        android:textSize="18sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/textTo"
        android:textSize="16sp"
        android:textAlignment="viewStart"
        android:gravity="start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:text="@string/Uwazi_WidgetSubtitle_DateTo"
        android:textColor="@color/wa_white_80"/>
    <Button
        android:id="@+id/dateWidgetButtonTo"
        style="@style/CollectFormWidgetButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="@string/collect.form_action_select.date"
        />
    <TextView
        android:id="@+id/dateTextTo"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_margin="2dp"
        android:background="@drawable/rounded_light_purple_background"
        android:gravity="center"
        android:textAlignment="center"
        android:textColor="@color/wa_white_80"
        android:textSize="18sp"
        android:visibility="gone" />
</LinearLayout>