<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="8dp"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingEnd="16dp"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:textDirection="locale">

        <ImageView
            android:id="@+id/delete"
            style="@style/ImageViewSelector"
            android:layout_alignParentEnd="true"
            android:contentDescription="@null"
            android:src="@drawable/delete_icon_selector" />

        <ImageView
            android:id="@+id/edit"
            style="@style/ImageViewSelector"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_toStartOf="@id/delete"
            android:contentDescription="@null"
            android:src="@drawable/edit_icon_selector" />

        <TextView
            android:id="@+id/server_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:drawablePadding="6dp"
            android:ellipsize="end"
            android:maxWidth="210dp"
            android:maxLines="1"
            android:textColor="@color/wa_black"
            android:textSize="16sp" />
    </RelativeLayout>

    <View style="@style/SettingsMainShadowLine" />

</LinearLayout>
