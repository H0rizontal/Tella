<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_purple">

    <org.hzontal.shared_ui.switches.TellaSwitchWithMessage
        android:id="@+id/offline_switch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:background="@drawable/rounded_light_purple_background"
        app:explainText="@string/offline_dialog.expl"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:titleText="@string/offline_dialog.title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:background="@drawable/rounded_light_purple_background"
        android:orientation="vertical"
        android:padding="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/offline_switch">

        <TextView
            android:id="@+id/general_settings_button"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:text="@string/settings_select_general"
            android:textAllCaps="false"
            android:textColor="@color/wa_white"
            app:drawableStartCompat="@drawable/ic_settings_white" />

        <TextView
            android:id="@+id/security_settings_button"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:text="@string/settings.select_security"
            android:textAllCaps="false"
            android:textColor="@color/wa_white"
            app:drawableStartCompat="@drawable/ic_white_lock_24" />

        <TextView
            android:id="@+id/servers_settings_button"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:text="@string/settings.docu_dialog.title_server.settings"
            android:textAllCaps="false"
            android:textColor="@color/wa_white"
            app:drawableStartCompat="@drawable/ic_assignment_white_24" />

        <TextView
            android:id="@+id/about_n_help_settings_button"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:text="@string/settings.about_app.bar"
            android:textAllCaps="false"
            android:textColor="@color/wa_white"
            app:drawableStartCompat="@drawable/ic_help_outline_white_24" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>