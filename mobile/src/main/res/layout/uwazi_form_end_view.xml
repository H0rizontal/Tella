<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:textDirection="locale"
    android:background="@color/wa_purple"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            style="@style/Tella_Main_White_Text.Meduim"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:textAppearance="?android:attr/textAppearanceMedium"
            tools:text="Submit your entity now or tap “SUBMIT LATER” to save it to your Outbox and send it later."
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/wa_white_20"
            >
        </View>

        <TextView
            android:id="@+id/formName"
            style="@style/Tella_Main_White_TextLargeBold"
            android:layout_width="match_parent"
            tools:text="Test Test"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:textColor="@color/wa_white"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/formSize"
            style="@style/Tella_Main_White_Text.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            tools:text="15MB"
            android:textColor="@color/wa_white"/>

        <LinearLayout
            android:id="@+id/formPartsList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/activity_vertical_margin" />

    </LinearLayout>

</LinearLayout>
