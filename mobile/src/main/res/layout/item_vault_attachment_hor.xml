<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/space_cadet"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_gravity="center"
        app:cardCornerRadius="7dp"
        app:cardElevation="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/attachmentImgContainer"
        android:background="@color/wa_white_32"
        >
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/attachmentImg"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:scaleType="fitXY"
            />
    </androidx.cardview.widget.CardView>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/icAttachmentImg"
        app:layout_constraintTop_toTopOf="@id/attachmentImgContainer"
        app:layout_constraintBottom_toBottomOf="@id/attachmentImgContainer"
        app:layout_constraintStart_toStartOf="@id/attachmentImgContainer"
        app:layout_constraintEnd_toEndOf="@id/attachmentImgContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/barrierNameTextView"
        app:layout_constraintGuide_percent="0.96"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/attachmentImgContainer"
        app:layout_constraintEnd_toStartOf="@id/barrierNameTextView"
        android:layout_marginEnd="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/fileDateTextView"
        style="@style/Tella_Main_White_Text.MeduimbBold"
        tools:text="IMG1021_6aIMG1021_6a6aIMG1021_6a..6aIMG16aIMG1021_6a..jpg"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginStart="55dp"
        android:id="@+id/fileNameTextView"
        app:layout_constraintVertical_chainStyle="packed"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/attachmentImgContainer"
        app:layout_constraintTop_toBottomOf="@id/fileNameTextView"
        app:layout_constraintBottom_toBottomOf="parent"
        style="@style/Tella_Main_White_Text.Small"
        android:textColor="@color/wa_white_80"
        tools:text="14:30pm"
        android:layout_marginStart="19dp"
        android:id="@+id/fileDateTextView"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/more"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >
        <ImageView
            android:layout_width="4dp"
            android:layout_height="4dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/dotTwo"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/ic_dot"
            android:id="@+id/dotOne"
          >
        </ImageView>

        <ImageView
            android:layout_width="4dp"
            android:layout_height="4dp"
            app:layout_constraintTop_toBottomOf="@id/dotOne"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/ic_dot"
            android:layout_marginTop="1dp"
            android:id="@+id/dotTwo"
            />

        <ImageView
            android:layout_width="4dp"
            android:layout_height="4dp"
            app:layout_constraintTop_toBottomOf="@id/dotTwo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/ic_dot"
            android:layout_marginTop="1dp"
            android:id="@+id/dotThree"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>


    <CheckBox
        android:id="@+id/checkbox_type_single"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:button="@drawable/gallery_checkbox_selector"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >
    </CheckBox>

</androidx.constraintlayout.widget.ConstraintLayout>