<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/wa_purple"
    tools:context=".views.fragment.uwazi.SubmittedUwaziFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/submittedRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="60dp"
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
        />

    <org.hzontal.shared_ui.textviews.CenterMessageTextView
        android:id="@+id/textView_empty_outbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:topImg="@drawable/ic_uwazi"
        app:textMessage="@string/Uwazi_Submitted_Entities_Empty_Description"
        />


</androidx.constraintlayout.widget.ConstraintLayout>