<resources>

    <style name="Base.PatternView" parent="">
        <item name="pl_rowCount">3</item>
        <item name="pl_columnCount">3</item>
        <item name="pl_aspect">square</item>
    </style>

    <style name="PatternView" parent="Base.PatternView">
        <item name="pl_regularColor">?colorControlNormal</item>
        <item name="pl_errorColor">#fff4511e</item>
        <item name="pl_successColor">?colorControlActivated</item>
    </style>

    <style name="PatternView.Light" parent="Base.PatternView">
        <item name="pl_regularColor">?colorControlNormal</item>
        <item name="pl_errorColor">#fff4511e</item>
        <item name="pl_successColor">?colorControlActivated</item>
    </style>

    <style name="Unlock_White_Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/wa_white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="DialogBottomPopUpText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="DialogBottomPopUpBackground">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">72dp</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginBottom">54dp</item>
        <item name="android:background">@drawable/pop_up_background</item>
    </style>

    <style name="Unlock_White_Text_Bold" parent="Unlock_White_Text">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

    <style name="Unlock_White_Text_Medium" parent="Unlock_White_Text">
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Unlock_White_Text_Next" parent="Unlock_White_Text">
        <item name="android:layout_marginBottom">13dp</item>
        <item name="android:layout_marginEnd">34dp</item>
        <item name="android:textColor">@color/wa_white_40</item>
    </style>

    <style name="Unlock_White_Text_Back" parent="Unlock_White_Text">
        <item name="android:layout_marginBottom">13dp</item>
        <item name="android:layout_marginStart">34dp</item>
    </style>

    <style name="Password_EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:layout_marginTop">40dp</item>
        <item name="android:inputType">numberPassword</item>
        <item name="android:background">@drawable/bg_pin_edittext</item>
        <item name="android:letterSpacing">0.2</item>
        <item name="android:cursorVisible">true</item>
        <item name="android:clickable">true</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/wa_white</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="Unlock_White_Text_Pin" parent="Unlock_White_Text_Back">
        <item name="android:layout_width">54dp</item>
        <item name="android:layout_height">54dp</item>
        <item name="android:layout_marginStart">0dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">30sp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:clickable">true</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <style name="DialogTheme" parent="@android:style/Theme.Panel">
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>
</resources>
